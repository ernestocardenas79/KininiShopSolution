{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["node", "express"],
    "plugins": [
      {
        "name": "typescript-eslint/eslint-plugin"
      }
    ],
    "esModuleInterop": true,
    "lib": ["es2017", "dom", "es5","ESNext.AsyncIterable"],
  },
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": ["src/**/*.ts"],
}
